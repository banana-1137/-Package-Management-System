<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout


        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:text="序号"
            android:id="@+id/text11"
            android:textColor="#000000"
            android:textSize="24sp"
            />
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="快递公司"
            android:id="@+id/text12"
            android:textColor="#000000"
            android:layout_toRightOf="@id/text11"
            android:textSize="24sp"
            />
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="取件人"
            android:id="@+id/text13"
            android:layout_toRightOf="@id/text12"
            android:textSize="24sp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:text="联系电话"
            android:id="@+id/text14"
            android:layout_toRightOf="@id/text13"
            android:textSize="24sp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="包裹状态"
            android:id="@+id/text26"
            android:layout_toRightOf="@id/text14"
            android:textColor="#000000"
            android:textSize="24sp"
            />
        <TextView
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="入库日期"
            android:textSize="24sp"
            android:id="@+id/text15"
            android:layout_toRightOf="@id/text26"
            android:textColor="#000000"
            />
        <ListView
            android:id="@+id/userlist"
            android:layout_width="match_parent"
            android:layout_below="@id/text11"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000" >
        </ListView>

    </RelativeLayout>
</HorizontalScrollView>